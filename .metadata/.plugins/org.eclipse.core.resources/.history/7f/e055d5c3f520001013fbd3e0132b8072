package dao;

import java.sql.*;
import java.security.MessageDigest;
import java.util.ArrayList;
import java.util.List;

import model.Utilisateur;
import util.connexion_db;

public class UtilisateurDAO {

    // üîê Hachage mot de passe
    private static String hashPassword(String password) {
        try {
            MessageDigest md = MessageDigest.getInstance("SHA-256");
            byte[] hashBytes = md.digest(password.getBytes());
            StringBuilder sb = new StringBuilder();
            for (byte b : hashBytes) {
                sb.append(String.format("%02x", b));
            }
            return sb.toString();
        } catch (Exception e) {
            throw new RuntimeException("Erreur de hash du mot de passe", e);
        }
    }

    // ‚úÖ Connexion utilisateur
    public static Utilisateur getUtilisateur(String email, String rawPassword) {
        Utilisateur user = null;
        try (Connection conn = connexion_db.getConnection()) {
            String hashedPassword = hashPassword(rawPassword);

            PreparedStatement ps = conn.prepareStatement(
                "SELECT * FROM utilisateur WHERE email = ? AND mot_de_passe = ?"
            );
            ps.setString(1, email);
            ps.setString(2, hashedPassword);
            ResultSet rs = ps.executeQuery();

            if (rs.next()) {
                user = new Utilisateur();
                user.setId(rs.getInt("ID_utilisateur"));
                user.setNom(rs.getString("nom"));
                user.setPrenom(rs.getString("prenom"));
                user.setEmail(rs.getString("email"));
                user.setRole(rs.getString("typeUser"));
                user.setPassword(""); // Ne pas retourner le vrai mot de passe
            }

            rs.close();
            ps.close();
        } catch (SQLException e) {
            e.printStackTrace();
        }

        return user;
    }

    // ‚úÖ Ajouter un agent (typeUser = agent)
    public static void ajouterAgent(Utilisateur agent) {
        try (Connection con = connexion_db.getConnection()) {
            String sql = "INSERT INTO utilisateur (nom, prenom, email, mot_de_passe, typeUser) VALUES (?, ?, ?, ?, ?)";
            PreparedStatement ps = con.prepareStatement(sql);
            ps.setString(1, agent.getNom());
            ps.setString(2, agent.getPrenom());
            ps.setString(3, agent.getEmail());
            ps.setString(4, hashPassword(agent.getPassword()));
            ps.setString(5, "agent");
            ps.executeUpdate();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }

    // ‚úÖ R√©cup√©rer tous les agents
    public static List<Utilisateur> getAllAgents() {
        List<Utilisateur> agents = new ArrayList<>();
        try (Connection con = connexion_db.getConnection()) {
            PreparedStatement ps = con.prepareStatement("SELECT * FROM utilisateur WHERE typeUser = 'agent'");
            ResultSet rs = ps.executeQuery();
            while (rs.next()) {
                Utilisateur agent = new Utilisateur();
                agent.setId(rs.getInt("ID_utilisateur"));
                agent.setNom(rs.getString("nom"));
                agent.setPrenom(rs.getString("prenom"));
                agent.setEmail(rs.getString("email"));
                agents.add(agent);
            }
        } catch (SQLException e) {
            e.printStackTrace();
        }
        return agents;
    }

    // ‚úÖ Supprimer un agent
    public static void supprimerUtilisateur(int id) {
        try (Connection con = connexion_db.getConnection()) {
            PreparedStatement ps = con.prepareStatement("DELETE FROM utilisateur WHERE ID_utilisateur = ?");
            ps.setInt(1, id);
            ps.executeUpdate();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
