package servlet;

import util.connexion_db;
import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;

import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

public class AjoutAgentServlet extends HttpServlet {
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        String username = request.getParameter("username");
        String email = request.getParameter("email");
        String password = request.getParameter("password");
        String role = "agent";

        try (Connection con = connexion_db.getConnection()) {
            String sql = "INSERT INTO utilisateurs (username, password,email, role) VALUES (?, ?, ?)";
            PreparedStatement ps = con.prepareStatement(sql);
            ps.setString(1, username);
            ps.setString(2, password);
            ps.setString(3, role);
            ps.executeUpdate();

            request.setAttribute("message", "Agent ajouté avec succès !");
            request.getRequestDispatcher("pages/admin/ajout_agent.jsp").forward(request, response);

        } catch (Exception e) {
            e.printStackTrace();
            request.setAttribute("message", "Erreur lors de l'ajout de l'agent.");
            request.getRequestDispatcher("pages/admin/ajout_agent.jsp").forward(request, response);
        }
    }
}
