package servlet;

import dao.BienDAO;
import model.Bien;
import jakarta.servlet.*;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.*;
import java.io.IOException;
import java.util.List;

@WebServlet("/BienServlet")
public class BienServlet extends HttpServlet {
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        
        List<Bien> biens = BienDAO.getAllBiens();
        
        for (Bien bien : biens) {
            bien.setImagesBien(BienDAO.getImagesByBienId(bien.getId()));
        }

        HttpSession session = request.getSession();
        Object user = session.getAttribute("user");

        if (user != null) {
            // ðŸ”µ Si l'utilisateur est connectÃ© => client => dashboard_client.jsp
            request.setAttribute("biens", biens);
            request.getRequestDispatcher("/pages/dashboard_client.jsp").forward(request, response);
        } else {
            // ðŸ”µ Sinon => page d'accueil publique => home.jsp
            request.setAttribute("biens", biens);
            request.getRequestDispatcher("/pages/home.jsp").forward(request, response);
        }
    }
}
