package servlet;

import dao.UtilisateurDAO;
import jakarta.servlet.*;
import jakarta.servlet.http.*;
import java.io.IOException;
import model.Utilisateur;

public class LoginAgentServlet extends HttpServlet {
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
        throws ServletException, IOException {

        String email = request.getParameter("email");
        String password = request.getParameter("password");

        Utilisateur agent = UtilisateurDAO.getUtilisateur(email, password);

        if (agent != null && "agent".equals(agent.getRole())) {
            HttpSession session = request.getSession();
            session.setAttribute("agent", agent);
            response.sendRedirect("pages/agent/dashboard.jsp");
        } else {
            request.setAttribute("message", "Identifiants invalides");
            request.getRequestDispatcher("pages/agent/agent_login.jsp").forward(request, response);
        }
    }
}
